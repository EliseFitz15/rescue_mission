<h1> <%= @question.title %> </h1>
<p><%= @question.body %></p>
<%= link_to 'Delete', question_path(@question),
  method: :delete %>

  <%= form_for [@question, @answer] do |f| %>
    <%= f.label :body %>
    <%= f.text_field :body %>
    <%= f.submit "Submit", class: "button" %>
  <% end %>

<ul>
<% @answers.each do |answer| %>
<li><%= answer.body %></li>
<% end %>
</ul>
